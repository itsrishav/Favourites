<p id="notice"><%= notice %></p>

<h1>Saved Titles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @saved_titles.each do |saved_title| %>
      <tr>
        <td><%= saved_title.title %></td>
        <td><%= saved_title.description %></td>
        <td><%= saved_title.image_url %></td>
        <td><%= link_to 'Show', saved_title %></td>
        <td><%= link_to 'Edit', edit_saved_title_path(saved_title) %></td>
        <td><%= link_to 'Destroy', saved_title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Saved Title', new_saved_title_path %>
